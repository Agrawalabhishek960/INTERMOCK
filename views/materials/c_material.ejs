    #include &lt;stdio.h><br>
        int factorial_of_a_number(int n)<br>
        {<br>
        int fact = 1, i;<br>
        if(n == 0)<br>
        return 1;<br>
        else<br>
        for(i = 1; i <= n; i++)<br>
        {<br>
        fact = fact * i;<br>
        }<br>
        return fact;<br>
        }<br>
        int main()<br>
        {<br>
        int n;<br>
        printf("Enter the number : ");<br>
        scanf("%d",&n);<br>
        if(n < 0)<br>
        printf("Invalid output");<br>
        else<br>
        printf("Factorial of the number %d is %d" ,n, factorial_of_a_number(n));<br>
        return 0;<br>
        }<br></h6>
